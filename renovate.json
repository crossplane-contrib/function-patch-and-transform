{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "crossplane": {
    "fileMatch": [
      "(^|/)example/.*\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "crossplane"
      ],
      "matchFileNames": [
        "example/**"
      ],
      "groupName": "examples"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ]
}
